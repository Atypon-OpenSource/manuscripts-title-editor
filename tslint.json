{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    "interface-name": [true, "never-prefix"],
    "no-implicit-dependencies": [true, "dev"],
    "only-arrow-functions": true,
    "no-submodule-imports": false,
    "typedef": true
  }
}
